<a class="cdx-card cdx-card--is-link {{Classes}}" href="{{Url}}">
  <span class="cdx-card__icon cdx-css-icon--{{IconClass}}"></span>
  <span class="cdx-card__text">
    <span class="cdx-card__text__title">{{Title}}</span>
    <span class="cdx-card__text__description">{{Description}}</span>
	  {{#Text}}
		  <span class="cdx-card__text__supporting-text">{{Text}}</span>
	  {{/Text}}
  </span>
</a>

